<h1>Add a task list</h1>
<%= form_for @task_list, url: task_lists_path, html: { class: "new-task-form" } do |f| %>
<% f.object.errors.full_messages.each do |error| %>
  <div class="errors">
    <%= error %>
  </div>
<% end %>
  <p>
    <% f.label :name %><br>
    <%= f.text_area :name %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>