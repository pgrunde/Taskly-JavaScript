<h2>Rocketships</h2>

<%= form_for @task, url: create_task_path do |f| %>

  <p>
   <%= f.label :task %>
   <%= f.text_field :task %>
     <% if @task.errors[:task].any? %>
       <p class="errors" style="display:inline;"><%= @task.errors[:task].first %></p>
     <% end %>
  </p>

  <p>
    <%= f.label :due_date %>
    <%= f.date_select :due_date %>
      <% if @task.errors[:due_date].any? %>
        <p class="errors" style="display:inline;"><%= @task.errors[:due_date].first %></p>
      <% end %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>