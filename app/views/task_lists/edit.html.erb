<h1>Edit a task list</h1>
<%= form_for @task_list, url: put_task_list_path, html: { class: "new-task-form" } do |f| %>

  <p>
    <% f.label :name %>
      <% if @task_list.errors[:name].any? %>
        <p><%= @task_list.errors[:name].first %></p>
      <% end %>
    <%= f.text_area :name %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>